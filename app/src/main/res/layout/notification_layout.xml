<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/main_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/title_song_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/singer_song_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the Singer"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title_song_notification"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/next_button_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_skip_next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/play_button_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/next_button_notification"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:id="@+id/prev_button_notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_skip_previous"
            android:layout_toLeftOf="@+id/play_button_notification"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"/>

    </RelativeLayout>

</LinearLayout>