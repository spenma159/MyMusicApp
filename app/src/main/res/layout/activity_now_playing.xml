<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NowPlayingActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/layout_top_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btn_back_now_playing"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow_back_1" />

        <TextView
            android:id="@+id/text_now_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btn_back_now_playing"
            android:text="Now Playing"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/layout_top_button">

        <ImageView
            android:id="@+id/cover_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_music_note"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imageview_gradient"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/gradient_bg"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_title_now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the title"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/card"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/text_singer_now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the singer"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/text_title_now_playing"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />
    <RelativeLayout
        android:id="@+id/layout_seeker"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/text_singer_now_playing"
        android:layout_above="@+id/layout_bottom_now_playing"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">
        <TextView
            android:id="@+id/curr_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <SeekBar
            android:id="@+id/seekbar_now_paying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/curr_duration"
            android:layout_toStartOf="@+id/end_duration"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/end_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.00"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_bottom_now_playing"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bg">
        <RelativeLayout
            android:id="@+id/layout_play_stop_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/play_button_now_playing"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_play"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/stop_button_now_playing"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_stop_play"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/next_button_now_playing"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_skip_next"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/layout_play_stop_button"/>
        <ImageView
            android:id="@+id/prev_button_now_playing"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_skip_previous"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layout_play_stop_button"/>
    </RelativeLayout>
</RelativeLayout>